<?xml version="1.0" encoding="UTF-8"?>

<module configVersion="1.2">
	
	<!-- Base Module Properties -->
	<id>medicationlog</id>
	<name>Medication Log</name>
	<version>1.1.1</version>
	<package>org.openmrs.module.medicationlog</package>
	<author>Tahira</author>
	<description>
			Manages drugs prescribed to a patient.
	</description>

	<activator>org.openmrs.module.medicationlog.MedicationLogActivator</activator>
	
	<!-- <updateURL>https://modules.openmrs.org/modules/download/medicationlog/update.rdf</updateURL> -->
	<!-- /Base Module Properties -->
	
	<require_version>2.1</require_version>
	
	<!-- Extensions -->
	<extension>
		<point>org.openmrs.admin.list</point>
		<class>org.openmrs.module.medicationlog.extension.html.AdminList</class>
	</extension>

	<extension>
	<point>org.openmrs.patientDashboardTab</point>
	<class>org.openmrs.module.medicationlog.extension.html.MedicationController</class>
	</extension >

	<aware_of_modules>
		<aware_of_module>org.openmrs.module.legacyui</aware_of_module>
		
	</aware_of_modules>
	
	
